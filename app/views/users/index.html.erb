<div class="row">
  <div class="small-12 columns">
    <h1>Listing Users</h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Provider</th>
          <th>Uid</th>
          <th>Expires at</th>
          <th>Admin</th>
          <th>Books</th>
          <% if current_user.admin? %>
            <th></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, user %></td>
            <td><%= user.provider %></td>
            <td><%= user.uid %></td>
            <td><%= user.expires_at %></td>
            <td><%= user.admin %></td>
            <td><%= user.books.count %></td>
            <% if current_user.admin? %>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button radius alert tiny' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>