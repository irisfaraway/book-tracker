<div class="row">
  <div class="small-12 columns">
    <h1><%= @user.name %></h1>
  </div>
</div>
<% if current_user.admin? %>
  <div class="row">
    <div class="small-12 columns">
      <p>
        <strong>Provider:</strong>
        <%= @user.provider %>
      </p>

      <p>
        <strong>Uid:</strong>
        <%= @user.uid %>
      </p>

      <p>
        <strong>Expires at:</strong>
        <%= @user.expires_at %>
      </p>

      <p>
        <strong>Admin:</strong>
        <%= @user.admin %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= link_to 'Edit', edit_user_path(@user), class: 'button' %> 
      <%= link_to 'Back', users_path, class: 'button' %>
    </div>
  </div>
<% end %>
