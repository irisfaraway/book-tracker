<div class="row">
  <div class="small-12">
    <h1>Add a new book</h1>
  </div>
</div>

<% unless params[:google_books_title].present? %>
  <%= render 'search' %>
<% end %>

<% unless params[:google_books_query].present? || params[:google_books_title].present? %>
  <div class="row">
    <div class="small-12">
      <p>If you don't want to search for a book, you can enter the book details yourself:</p>
    </div>
  </div>
<% end %>

<% if params[:google_books_query].present? %>
  <%= render 'results' %>
<% end %>

<% unless params[:google_books_query].present? %>
  <%= render 'form' %>
<% end %>