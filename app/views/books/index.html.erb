<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Start</th>
      <th>End</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.start.to_formatted_s(:dmy) %></td>
        <td><% if book.end.nil? %>
              -
            <% else %>
              <%= book.end.to_formatted_s(:dmy) %>
            <% end %></td>
        <td><% if book.rating.nil? %>
              -
            <% else %>
              <%= book.rating %>
            <%end %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

